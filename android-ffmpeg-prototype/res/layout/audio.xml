<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/ScrollView01" android:layout_width="fill_parent" android:layout_height="fill_parent">

<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    >
    
    <TextView android:text="Publish and receive audio" android:id="@+id/textView1" 
    android:layout_width="match_parent" 
    android:gravity="center_horizontal"
    android:textStyle="bold"
	android:ellipsize="end"
	android:textColor="#ffffff"
	android:radius="10px"
	android:padding="5px"
    android:layout_height="wrap_content">
    </TextView>
    
    <EditText android:layout_height="wrap_content" android:text="" 
    	android:layout_width="match_parent" 
    	android:inputType="textUri"
    	android:id="@+id/rtmpServerUrl">
    </EditText>
    
   <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" 
   android:padding="5px"
   android:layout_width="match_parent" android:orientation="horizontal">
   	 
   		<LinearLayout android:layout_height="wrap_content" 
   			android:id="@+id/linearLayout1" 
   			android:layout_width="0dip" 
    		android:layout_weight="2"
    		android:padding="5px"
    		android:background="@layout/round_rect"
   			android:orientation="vertical">
   			
   			<TextView android:text="You are" android:id="@+id/textView1" 
    			android:layout_width="match_parent" 
    			android:gravity="center_horizontal"
    			android:textStyle="bold"
				android:ellipsize="end"
				android:textColor="#000000"
				android:radius="10px"
				android:padding="5px"
    			android:layout_height="wrap_content">
    		</TextView>
   	
	   		<EditText android:layout_height="wrap_content" android:text="kaka" 
    			android:layout_width="match_parent" 
    			android:id="@+id/publishingTopic">
    		</EditText>

    	</LinearLayout>
    	
    	
    	<Button android:text="&lt; &gt;" 
					android:id="@+id/switchTopicButton" 
					android:layout_width="45px"
					android:gravity="center_vertical|center_horizontal"
					android:layout_height="match_parent"
					>
		</Button>
		
		
		<LinearLayout android:layout_height="wrap_content" 
   			android:id="@+id/linearLayout1" 
   			android:layout_width="0dip" 
    		android:layout_weight="2"
    		android:padding="5px"
    		android:background="@layout/round_rect"
   			android:orientation="vertical">
   			
   			<TextView android:text="Other is" android:id="@+id/textView1" 
    			android:layout_width="match_parent" 
    			android:gravity="center_horizontal"
    			android:textStyle="bold"
				android:ellipsize="end"
				android:textColor="#000000"
				android:radius="10px"
				android:padding="5px"
    			android:layout_height="wrap_content">
    		</TextView>
   	
	   		<EditText android:layout_height="wrap_content" android:text="pipi"
    		android:layout_width="match_parent"
    		android:id="@+id/subscribingTopic">
    	</EditText>

    	</LinearLayout>
		
    	
   	
   </LinearLayout>

			<LinearLayout android:layout_height="wrap_content" 
			android:id="@+id/linearLayout1" 
			android:paddingTop="2px"
			android:layout_width="match_parent" 
			android:orientation="horizontal" >
				<Button android:text="START" 
					android:id="@+id/startCaptureButton" 
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1">
				</Button>
				<Button android:text="STOP" android:id="@+id/stopCaptureButton"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1">
				</Button>
			</LinearLayout>
   
	
	<LinearLayout android:layout_height="wrap_content" 
			android:id="@+id/linearLayout1" 
			android:paddingTop="2px"
			android:layout_width="match_parent" 
			android:orientation="horizontal" >
				
				
		<TextView android:text="0kb" android:id="@+id/receivedStatusText" 
    			android:layout_width="match_parent" 
    			android:gravity="center_horizontal"
    			android:textStyle="bold"
				android:ellipsize="end"
				android:textColor="#ffffff"
				android:radius="10px"
				android:padding="5px"
    			android:layout_height="wrap_content">
    		</TextView>
				
			</LinearLayout>
	
	
</LinearLayout>
</ScrollView>
